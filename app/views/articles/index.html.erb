<div class="container mt-4 text-center">
  <h1>Articles</h1>
  <div class="card d-flex">
    <ul class="list-group list-group-flush">
      <% @articles.each do |article| %>
          <%= link_to "#{article.title}", article_path(article), class: "text-black text-center"%>
          <%= link_to article_path(article), data: { turbo_method: 'delete' }, class: 'btn btn-light' do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to "Create a article", new_article_path, class: "btn btn-primary text-decoration-none mt-4" %>
</div>
